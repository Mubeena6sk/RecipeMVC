@model RecipesMVC.Models.RecipeClass



@{ ViewData["Title"] = @Html.DisplayFor(model => model.Rname); }

<body style="background-image: url(https://image.freepik.com/free-vector/seamless-pizza-ingredients_1176-269.jpg);color:white;">
    <div style=" display:block;background: rgba(0,0,0,0.7); width: fit-content; height: fit-content; border-radius: 30px; color: white; margin: 0 auto;color:white;margin:10px;padding:10px">
        <h1>@Html.DisplayFor(model => model.Rname)</h1></div>
        @{
            var base64 = Convert.ToBase64String(Model.Rimage);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }



        <div>
            <hr />
            <dt><img src="@imgSrc" style="float:right;width:340px;height:340px"></dt>
            <dl class="row">

                <dt class="col-sm-2">
                    <div style=" display:block;background: rgba(0,0,0,0.7); width: fit-content; height: fit-content; border-radius: 30px; color: white; margin: 0 auto;color:white;margin:10px;padding:10px">
                        @Html.DisplayNameFor(model => model.Instructions)</div>
                </dt>
                <dd class="col-sm-10">
                    <div style=" display:block;background: rgba(0,0,0,0.7); width: 550px; height: fit-content; border-radius: 30px; color: white; margin: 0 auto;color:white;margin:10px;padding:10px">
                        @Html.DisplayFor(model => model.Instructions)
                    </div>
                </dd>
            </dl>
        </div>
        <div>
        </div>
</body>
